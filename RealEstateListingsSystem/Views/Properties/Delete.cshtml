@model RealEstateListingsSystem.Models.Property

@{
    ViewData["Title"] = "Delete Property";
}

<h2 class="mb-4 text-danger">Delete Property</h2>

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this property?</h5>
</div>

<div class="card shadow">

    <div class="card-header bg-danger text-white">
        <h4>@Model.Title</h4>
    </div>

    <div class="card-body">

        <dl class="row">

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">€@Model.Price.ToString("N0")</dd>

            <dt class="col-sm-3">Size</dt>
            <dd class="col-sm-9">@Model.Size sqm</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Property Type</dt>
            <dd class="col-sm-9">@Model.PropertyType?.Name</dd>

            <dt class="col-sm-3">Agent</dt>
            <dd class="col-sm-9">@Model.Agent?.FullName</dd>

        </dl>

    </div>

    <div class="card-footer">

        <form asp-action="DeleteConfirmed" method="post">

            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">
                Delete
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                Cancel
            </a>

        </form>

    </div>

</div>
