@model IEnumerable<RealEstateListingsSystem.Models.Property>

@{
    ViewData["Title"] = "All Properties";
}

<h2 class="mb-4">All Properties</h2>

<a asp-controller="Properties" asp-action="Create" class="btn btn-primary mb-3">
    Add New Property
</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Price (€)</th>
            <th>Size (sqm)</th>
            <th>Address</th>
            <th>Property Type</th>
            <th>Agent</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.Title</td>
                <td>@property.Price.ToString("N0")</td>
                <td>@property.Size</td>
                <td>@property.Address</td>
                <td>@property.PropertyType?.Name</td>
                <td>@property.Agent?.FullName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@property.Id" class="btn btn-info btn-sm">
                        Details
                    </a>

                    <a asp-action="Edit" asp-route-id="@property.Id" class="btn btn-warning btn-sm">
                        Edit
                    </a>

                    <a asp-action="Delete" asp-route-id="@property.Id" class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No properties found.
    </div>
}
